    "lodash": "~4.17.0"
  },
  "devDependencies": {
    "eslint": "^7.0.0",
    "@aurelia/testing": "dev",
    "htmlhint": "^0.13.0",
    "@aurelia/plugin-gulp": "dev",
    "gulp": "^4.0.2",
    "gulp-dumber": "^1.0.3",
    "gulp-typescript": "^5.0.1",
    "gulp-plumber": "^1.2.1",
    "merge2": "^1.3.0",
    "gulp-terser": "^1.2.0",
    "gulp-if": "^3.0.0",
    "del": "^5.1.0",
    "connect": "^3.7.0",
    "connect-history-api-fallback": "^1.6.0",
    "connect-injector": "^0.4.4",
